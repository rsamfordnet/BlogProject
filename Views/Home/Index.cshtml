@using BlogProject.Models
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@model IPagedList<Blog>


@{
    ViewData["Title"] = "Home Page";
}

<main id="main">

    <!-- ======= Hero Slider Section ======= -->
    <!-- End Hero Slider Section -->
